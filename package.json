{
  "name": "@qiwi/consul-service-discovery",
  "version": "1.3.1",
  "description": "Consul service discovery",
  "main": "target/es5/index.js",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "yarn lint --fix",
    "jest": "jest -w 2",
    "test": "yarn jest",
    "pretest": "yarn lint",
    "test_with_report": "yarn test && yarn coveralls_push",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls",
    "build": "yarn clean && yarn build:es5 && yarn build:es6 && yarn build:ts && yarn docs",
    "build:es5": "mkdir -p target/es5 && tsc -p tsconfig.build.json --target ES5 --outDir target/es5",
    "build:es6": "mkdir -p target/es6 && tsc -p tsconfig.build.json --target ES6 --outDir target/es6",
    "build:ts": "cp -r src/main/ts target/ts",
    "clean": "rm -rf ./target",
    "docs": "typedoc --readme README.md --tsconfig tsconfig.build.json src/main --ignoreCompilerErrors || exit 0"
  },
  "keywords": [
    "consul",
    "consul-client",
    "consul-service-discovery"
  ],
  "authors": [
    "Anton Golub <golub.anton@gmail.com>",
    "Mikhail Dolgikh <wearebear80@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:qiwi/consul-service-discovery.git"
  },
  "license": "MIT",
  "dependencies": {
    "consul": "^0.35.0",
    "lodash": "^4.17.14"
  },
  "devDependencies": {
    "@qiwi/semantic-release-gh-pages-plugin": "^1.10.3",
    "@qiwi/substrate": "^1.11.2",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/npm": "^5.1.13",
    "@types/bluebird": "^3.5.27",
    "@types/consul": "^0.23.33",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "bluebird": "^3.5.5",
    "coveralls": "^3.0.5",
    "jest": "^24.8.0",
    "semantic-release": "^15.13.18",
    "typedoc": "^0.14.2",
    "typedoc-plugin-external-module-name": "^2.1.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.3"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/main/ts/*.+(ts|tsx|js)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>src/test/**/*.+(ts|tsx|js)"
    ]
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@qiwi/semantic-release-gh-pages-plugin"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github",
      "@qiwi/semantic-release-gh-pages-plugin"
    ]
  }
}
