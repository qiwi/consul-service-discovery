{
  "name": "@qiwi/consul-service-discovery",
  "version": "1.8.0",
  "description": "Consul service discovery",
  "main": "target/es5/index.js",
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "yarn lint --fix",
    "jest": "jest -w 2 --config=jest.config.json",
    "test": "yarn jest",
    "pretest": "yarn lint",
    "test:report": "yarn test && yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "build": "yarn clean && yarn build:es5 && yarn build:es6 && yarn build:ts && yarn build:libdef && yarn docs",
    "build:es5": "mkdir -p target/es5 && tsc -p tsconfig.es5.json",
    "build:es6": "mkdir -p target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cp -r src/main/ts target/ts",
    "build:libdef": "dts-generator --project ./ --out typings/index.d.ts --prefix @qiwi/consul-service-discovery/target/es5 --name @qiwi/consul-service-discovery --main @qiwi/consul-service-discovery/target/es5/index --moduleResolution node && libdeffix --dts=./typings/index.d.ts --prefix=@qiwi/consul-service-discovery/target/es5 && flowgen typings/index.d.ts --output-file flow-typed/index.flow.js",
    "clean": "rm -rf ./target",
    "docs": "typedoc --readme README.md --tsconfig tsconfig.json src/main/ts --ignoreCompilerErrors || exit 0",
    "postupdate": "yarn && yarn build && yarn test"
  },
  "keywords": [
    "consul",
    "consul-client",
    "consul-service-discovery"
  ],
  "authors": [
    "Anton Golub <golub.anton@gmail.com>",
    "Mikhail Dolgikh <wearebear80@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:qiwi/consul-service-discovery.git"
  },
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^8.0.0",
    "@types/consul": "^0.23.34",
    "@types/lodash": "^4.14.157",
    "@qiwi/substrate": "^1.18.33",
    "consul": "^0.37.0",
    "inside-out-promise": "^2.1.0",
    "lodash": "^4.17.15",
    "push-it-to-the-limit": "^1.12.1",
    "tslib": "^2.0.0",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@qiwi/semantic-release-gh-pages-plugin": "^4.0.0",
    "@qiwi/libdefkit": "^1.0.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@types/bluebird": "^3.5.32",
    "@types/jest": "^26.0.3",
    "bluebird": "^3.7.2",
    "coveralls": "^3.1.0",
    "esm": "^3.2.25",
    "jest": "^26.1.0",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.1.1",
    "tslint": "^6.1.2",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.17.8",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "^3.9.6",
    "yargs": "^15.4.1"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed"
  ],
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@qiwi/semantic-release-gh-pages-plugin"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github",
      "@qiwi/semantic-release-gh-pages-plugin"
    ]
  }
}
