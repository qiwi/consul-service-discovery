{
  "version": "1.0.0",
  "compilerOptions": {
      "target": "es5",
      "lib": ["es6", "es2015", "dom"],
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "declaration": true,
      "rootDir": "./src",
      "declarationDir": "./dist",
      "outDir": "./dist",
      "suppressImplicitAnyIndexErrors": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  }
}
